<div class="container">
  <div class="createmission">
    <div class="newmission"><%= link_to "Create a new mission", new_mission_path(@mission) %>
    </div>
  </div>
  <div class="flex-fav-histo">
    <div class="misfavs">
      <div class="missions">
      <h2>Missions</h2>
        <% @missions.last(3).each do |mission| %>
          <div class="namego">
            <p class="missionname"><strong><%= link_to mission.name, mission_path(mission) %></strong></p>
            <p class="go"><%= link_to "Go", mission_path(mission) %></p>
      </div>
        <% end %>
    </div>
    <div class="favoris">
        <%= render "favorites", locals: {current_user: current_user, mission: @mission} %>
    </div>
   </div>
</div>
</div>

  <div class="history-container-dashboard">
    <h2> History </h2>
    <div class="custom-container">
        <%= render "mission_history", locals: {missions: @missions} %>
    </div>
  </div>
