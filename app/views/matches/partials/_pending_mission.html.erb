      <div class="pending-nav" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://dailygeekshow.com/wp-content/uploads/2020/01/une-matrix-recette.jpg);">
        <div class="pend-text">
          <h1 class="megatitle"><%= @mission.name %></h1>
        </div>
        <div class="pend-btn">
          <a class="my-button" href=""><%= link_to "Back to Match", match_landing_path(@mission) %></a>
        </div>
        <div class="pend-btn">
          <a class="my-button" href=""><%= link_to "Dashboard", user_dashboard_path(@dashboard) %></a>
        </div>
      </div>

      <div class="mission-specs">
        <div class="mission-desc">
          <p><%= @mission.description %> </p>
        </div>
        <div class="mission-datedom">
          <div class="mission-date">
            <h4>Date</h4>
            <p>from : <%= @mission.start_date %> to : <%= @mission.end_date %></p>
          </div>
          <div class="mission-dom">
            <h4>Area</h4>
            <p><%= @mission.area %></p>
          </div>
        </div>
        <div class="mission-langsoft">
          <div class="mission-lang">
            <h4>Languages</h4>

            <div class="lang-logos">
             <% @mission.languages.each do |language| %>
            <%= image_tag(language.langicon, size: "30x30")%>
            <% end %>
            </div>
          </div>
          <div class="mission-soft">
            <h4>Soft skills</h4>
            <% @mission.soft_skills.last(2).each do |soft_skill| %>
            <p><%= soft_skill.skill %> </p>
            <% end %>
          </div>
        </div>
      </div>
