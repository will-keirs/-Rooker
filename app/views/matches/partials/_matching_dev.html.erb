<div class="dev-outer-card">
  <% @matches.each do |match| %>
    <div class="dev-inner-card">
        <div class="dev-inner-card-image">
          <%= link_to image_tag( match.dev.photo, class: "rounded-circle bubu"), match_path(match) %>
        </div>
        <div class="border-div">
          <div class="dev-inner-card-col">
              <h4><strong>Infos:</strong></h4>
                <div class="pad-title-content">
                  <h5><strong><%= link_to match.dev.name, match_path(match) %></strong></h5>
                  <p><%= match.dev.diploma %></p>
                  <p><%= match.dev.location %></p>
                </div>
           </div>
        </div>
        <div class="border-div">
          <div class="dev-inner-card-col">
            <h4><strong>Languages:</strong></h4>
              <div class="pad-title-content-title">
                <% match.dev.languages.first(2).each do |l| %>
                 <ul>
                  <li style="list-style: none" data-controller="tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= pluralize(l.langtype, "review") %>"><%= image_tag( l.langicon,  :height => "40", :width => "40") %></li>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
        <div class="border-div">
          <div class="dev-inner-card-col soft">
          <h4><strong>Soft skills:</strong></h4>
          <div class="pad-title-content">
              <% match.dev.soft_skills.first(3).each do |sk| %>
                <ul>
                  <li><strong><%= sk.skill %></strong></li>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
        <div class="border-div">
            <div class="dev-inner-card-col">
              <div class="dev-inner-card-chat">
                  <% if match.dev.availability == true %>
                    <%= image_tag("true.png",  :height =>"20", :width => "20", class: "rounded-circle") %>
                  <% else %>
                    <%= image_tag("false.png",  :height =>"20", :width => "20", class: "rounded-circle") %>
                  <% end %>
                  <h4 class="glow"><strong>Chat</strong></h4>
              </div>
            </div>
            <div class="border-div-vote">
              <div class="dev-inner-card-vote">
                  <p><strong><%= match.dev.upvote %></strong></p>
                  <%= image_tag("upvote.png",  :height =>"30", :width => "30", :class => "glow") %>
              </div>
          </div>
        </div>
        <div class="border-div">
          <div class="dev-inner-card-col">
            <i class="fa-solid fa-bell glow fa-4x"></i>
          </div>
        </div>
    </div>
  <% end %>
</div>
