  <div class="dev-header">
    <div class="dev-avatar">
       <%= image_tag( @dev.photo, size: "400*400", class: "rounded-circle") %>
    <%# image %>
    </div>
    <div class="dev-infos" data-controller="upvote">
      <h1><strong><%= @dev.name %></strong></h1>
      <h4><%= @dev.diploma %></h4>
      <div class="dev-links">
        <h4><strong>Links</strong></h4>
          <div class="dev-links-icons">
              <a href= "<%= @dev.github_link %>" ><i class="fab fa-github glow fa-3x"></i></a>
              <a href= "<%= @dev.linkedin_link %>"><i class="fab fa-instagram glow fa-3x"></i></a>
              <a href= "<%= @dev.website_link %>"><i class="fab fa-facebook glow fa-3x"></i></a>
              <a href= "<%= @dev.twitter_link %>"><i class="fab fa-twitter glow fa-3x"></i></a>
              <a href= "<%= @dev.linkedin_link %>"><i class="fab fa-linkedin glow fa-3x"></i></a>
           </div>
      </div>
      <div class="dev-description">
        <h4><strong>Description</strong></h4>
        <p><%= @dev.description %></p>
      </div>
      <div class="dev-upvote">
          <h2><strong data-upvote-target="targette"><%= @dev.upvote %></strong></h2>
          <li style="list-style:none" data-upvote-target="targetteur" data-action="click->upvote#click"><%= image_tag("upvote.png", class: "glow", :height =>"30", :width => "30") %> </li>
      </div>
    </div>
    <div class="dev-my-comment">
      <h4><strong>Your comment:</strong></h4>
         <p><%= @match.comment %></p>
    </div>
  </div>
  <div class="dev-missions">
    <div class="dev-missions-it">
       <h2><strong>Worked on:   </strong></h2>
      <% @dev.missions.each do |mission|%>
       <li><strong> <%=link_to mission.name, mission_path(mission)%> | </strong></li>
      <% end %>
    </div>
  </div>
  <div class="dev-body">
  <div class="background-dev-profile">
    <div class="dev-langs-container">
        <h2 class="title-center-profile-dev"><strong>Languages </strong></h2>
        <div class="dev-langs">

          <% @dev.languages.each do |l| %>
              <ul>
                <li style="list-style: none" data-controller="tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= pluralize(l.langtype, "review") %>"><%= image_tag( l.langicon,  :height => "40", :width => "40", class: "rounded-circle") %></li>
              </ul>
            <% end %>
          </div>
      </div>
      <div class="dev-softs-container">
        <h2 class="title-center-profile-dev"><strong>Soft skills </strong></h2>
        <div class="dev-softs">
            <% @dev.soft_skills.each do |sk| %>
              <ul>
                  <li><%= sk.skill %></li>
              </ul>
            <% end %>
        </div>
     </div>
 </div>
    <%# dev language , dev skills  %>
    </div>
    <div class="dev-contact"
    data-controller="mailtoggler">
      <div class="avail-chat">
          <% if @dev.availability == true %>
            <%= image_tag("true.png",   :height => "40", :width => "40", class: "rounded-circle pin") %>
          <% else %>
            <%= image_tag("false.png",   :height => "40", :width => "40", class: "rounded-circle") %>
          <% end %>
          <h3 class="glow"><strong>Chat</strong></h3>
      </div>
   <div class="dev-mail"
   data-action="click->mailtoggler#toggle">
    <div data-mailtoggler-target="mail">
      <i class="fa fa-envelope glow fa-6x" aria-hidden="true"></i>
    </div>
    <div data-mailtoggler-target="email" class="d-none">
      <div class="dev-mail-text">
      <p><strong>Phone: <%= @dev.phone %></strong></p>
      <p><strong>Mail: <%= @dev.email %></strong></p>
      </div>
    </div>
  </div>
    <div data-controller="mailtoggler2"
        data-action="click->mailtoggler2#togglebell" >
        <div data-mailtoggler2-target="bell" class="ring-a-bell">
            <i class="fa-solid fa-bell glow fa-6x"></i>
        </div>
        <div class="ring-a-bell-text">
          <p data-mailtoggler2-target="bellname" class="d-none"><strong>Notification sent to <%="#{@dev.name}"%></strong></p>
        </div>
      </div>
    <%# dev availability = chat , bell to notify  %>
  </div>
